<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="siswa_crud_page" name = "Data Siswa">
        <t t-call="website.layout">
            <head>
                <title>Data Siswa</title>
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"/>
            </head>
            <body>
                <div class="container-xl m-5">
                    <div class="d-flex justify-content-between">
                        <h1>Data Siswa</h1>
                        <a href="/siswa/addsiswa">
                            <button type="button" class="btn btn-sm btn-primary">New Siswa</button>
                        </a>
                    </div>
                    <table class="table table-hover mt-4 table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID Siswa</th>
                                <th>Batch</th>
                                <th>Nama</th>
                                <th>Email</th>
                                <th>Pekerjaan</th>
                                <th>Pendidikan</th>
                                <th>Usia</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="teachers" t-as="teacher">
                                <tr>
                                    <td>
                                        <t t-esc="teacher.id"/>
                                    </td>
                                    <td>
                                        <t t-esc="teacher.batch"/>
                                    </td>
                                    <td>
                                        <t t-esc="teacher.nama"/>
                                    </td>
                                    <td>
                                        <t t-esc="teacher.email"/>
                                    </td>
                                    <td>
                                        <t t-esc="teacher.work"/>
                                    </td>
                                    <td>
                                        <t t-esc="teacher.education"/>
                                    </td>
                                    <td>
                                        <t t-esc="teacher.usia"/>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-around">
                                            <form action="">
                                                <button type="button" class="btn btn-sm btn-primary">Edit</button>
                                            </form>
                                            <form action="/siswa/deletesiswa">
                                                <input type="hidden" id="del-ID" name="del-ID" t-att-value="teacher.id" />
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </body>
        </t>
    </template>
</odoo>