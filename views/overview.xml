<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="overview_siswa_page" name="Overview Siswa">
        <t t-call="website.layout">
            <head>
                <title>Overview Siswa</title>
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
            </head>
            <body>
                <div class="container mt-5">
                    <h1 class="sale-title">Overview Siswa</h1>
                    <table class="table table-hover mt-4 table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID Siswa</th>
                                <th>Batch</th>
                                <th>Nama</th>
                                <th>Email</th>
                                <th>Pekerjaan</th>
                                <th>Pendidikan</th>
                                <th>Usia</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="data_siswa" t-as="row">
                                <tr>
                                    <td>
                                        <t t-esc="row.id" />
                                    </td>
                                    <td>
                                        <t t-esc="row.batch" />
                                    </td>
                                    <td>
                                        <t t-esc="row.nama" />
                                    </td>
                                    <td>
                                        <t t-esc="row.email" />
                                    </td>
                                    <td>
                                        <t t-esc="row.work" />
                                    </td>
                                    <td>
                                        <t t-esc="row.education" />
                                    </td>
                                    <td>
                                        <t t-esc="row.usia" />
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-around">
                                            <form action="/siswa/updatesiswa">
                                                <input type="hidden" id="upd-ID" name="upd-ID" t-att-value="row.id" />
                                                <button type="submit" class="btn btn-sm btn-primary">Edit</button>
                                            </form>
                                            <form action="/siswa/deletesiswa">
                                                <input type="hidden" id="del-ID" name="del-ID" t-att-value="row.id" />
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </body>
        </t>
    </template>
</odoo>